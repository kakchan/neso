	</head>
	<body>
		<div class="container">
			<div class="top_nav">
				<img src="/images/logo.png" />
			</div>
			<% [ "info", "error" ].forEach( function( flash_type ) {
					var flash = request.flash(flash_type).pop();
					if (flash) {
			%>
				<div class="alert-message <%- flash_type %>">
					<%- flash %>
					<div class="close flow-right" href="#">Ã—</div>
				</div>
			<%  }
				 });
			%>

			<div class="content">
				<%- body %>
			</div>
			<div class="footer">
				<div class="flow-left">
					&copy; Copyright 2012
				</div>
				<div class="flow-right">
					Designed by <a href="https://github.com/kakchan">kakchan</a>
				</div>
			</div>
		</div>
	</body>
	<%- javascript_include_tag('jquery', 'rails', 'application') %>
