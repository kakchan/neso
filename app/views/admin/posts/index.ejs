<h1>Posts</h1>

<div class="blogList list">
	<% posts.forEach(function (post) { %>
	<div class="blogList-row list-row clear-floats">
		<div class="blogList-row-leftCell flow-left">
			<h2 class="blogList-title list-title">
				<a href="<%= path_to.edit_admin_post(post) %>"><%= post.title %></a>
			</h2>
			<div class="blogList-thumbnailContainer flow-left">
				<img class="blogList-thumbnail" src="/uploaded/posts/<%= post.thumbnail_filename %>" />
			</div>
			<div class="blogList-excerpt flow-left">
				<span><%- post.excerpt ? convertToHtml( post.excerpt ) : "" %></span>
			</div>
			<div class="blogList-info">
				<span>author: <%= users[ post.author() ].username %></span>
				<span>permalink: <%= post.permalink || "" %></span>
				<span>published on: <%= formatToDate(post.published_date) || "" %></span>
				<span>published: <%= post.published %></span>
			</div>
		</div>
		<div class="blogList-row-rightCell flow-right">
			<%- link_to('Edit', path_to.edit_admin_post(post), {class: 'btn primary'}) %>
			<%- link_to('Delete', path_to.admin_post(post), {class: 'btn danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
		</div>
	</div>
	<% }); %>
</div>

<hr/>

<div>
	<%- link_to('New Post', path_to.new_admin_post, {class: 'btn primary'}) %>
</div>